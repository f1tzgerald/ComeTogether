<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"><!-- Task info text --><TextView android:id="@+id/LabelTaskText" android:text="@string/tasks_text" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@+id/TaskDetailsHeader" /><EditText android:id="@+id/TaskText" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@+id/LabelTaskText" android:imeOptions="actionNext" android:maxLines="1" /><!-- Task info Date Added --><TextView android:id="@+id/DateAddedLabel" android:text="@string/date_added" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@+id/TaskText" /><TextView android:id="@+id/DateAddedText" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@+id/DateAddedLabel" android:imeOptions="actionDone" /><!-- Task info Date To Done --><TextView android:id="@+id/DateFinishLabel" android:text="@string/date_to_done" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@+id/DateAddedText" /><TextView android:id="@+id/DateFinishText" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@+id/DateFinishLabel" /><Button android:id="@+id/ChangeDateFinishButton" android:text="@string/btn_date_to_done" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@+id/DateFinishText" /><!-- Task info Status --><CheckBox android:id="@+id/chkDone" android:layout_below="@+id/ChangeDateFinishButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Done" /><!-- Buttons --><Button android:id="@+id/SaveButton" android:text="Save" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@+id/chkDone" /><Button android:id="@+id/CancelDeleteButton" android:text="Cancel" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@+id/SaveButton" /></RelativeLayout>