<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />

    <title>@ViewBag.Title</title>
    

    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootswatch/united/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />

</head>
<body>
    <div id="sidebar">
        <!--PUT here image from user id-->
        <img src="img/user1.jpg" alt="headshot" class="headshot" />
        <br />
        <!--PUT here name from user id-->
        <span>Vitalii F.</span>

        <ul class="menu nav">
            <li class="active"><a asp-controller="Main" asp-action="Index">How to start</a></li>
            <li><a asp-controller="Main" asp-action="About">About</a></li>
            <li><a asp-controller="Main" asp-action="Contact">Contact</a></li>
            <li><a asp-controller="Main" asp-action="Constructor">Constructor</a></li>
        </ul>

    </div>

    <div id="wrapper">
        <div id="main">
            <div>
                <button id="sidebarBtn" class="btn btn-default">
                    <i class="fa fa-chevron-left"></i>
                </button>
            </div>
            
            <div>
                @RenderBody()
            </div>

        </div>
        <footer class="modal-footer">
            <p class="text-info text-center">&copy; 2016 Fitzgerald Ltd.</p>
        </footer>
    </div>


    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/js/script.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
